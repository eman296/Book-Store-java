<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SeeAllBooks"
    android:id="@+id/linearlayout_All_books"
    android:background="@drawable/imag1"
    android:layout_weight="10"
    android:orientation="vertical">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="4">

        <ImageView
            android:id="@+id/img_catergory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/imag1" />

        <ImageView
            android:id="@+id/img_back_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_margin="20dp"
            app:tint="@color/background" />

        <TextView
            android:id="@+id/txt_view_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="start|bottom"
            android:text="Category"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />


</RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/curved_bg"
        android:layout_weight="6">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycyle_view_category"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="500dp" />
    </LinearLayout>


</LinearLayout>